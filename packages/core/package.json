{
  "name": "@token-icons/core",
  "homepage": "https://tokenicons.io",
  "description": "Token Icons' core library serving optimized SVGs for cryptocurrency token & coin icons.",
  "keywords": [
    "crypto icons",
    "cryptocurrency",
    "ethereum logos",
    "cryptocurrency logos",
    "crypto logos",
    "svg crypto icons",
    "coin icons"
  ],
  "version": "1.1.0",
  "private": false,
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0xa3k5/token-icons.git",
    "directory": "packages/core"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "bun run generate-core && tsc && bun run generate-react && bun run lint && bun run format",
    "lint": "eslint ./src ./scripts --ext .ts",
    "format": "prettier --write \"**/*.{ts,js,md,json}\"",
    "generate-core": "bun run optimize-svgs && bun run generate-metadata && bun run generate-core:svgs-module && bun run generate-core:index",
    "generate-core:svgs-module": "bun run ./scripts/generate-svgs-module.ts",
    "optimize-svgs": "bun run ./scripts/optimize-svgs.ts",
    "generate-metadata": "bun run ./scripts/generate-metadata.ts",
    "generate-react": "bun run generate-react:components && bun run generate-react:index",
    "generate-core:index": "bun run ./scripts/generate-core-index.ts",
    "generate-react:components": "bun run ./scripts/generate-react-components.ts",
    "generate-react:index": "bun run ./scripts/generate-react-index.ts"
  },
  "devDependencies": {
    "bun-types": "latest",
    "cheerio": "^1.0.0-rc.12",
    "svgo": "^3.2.0"
  },
  "peerDependencies": {
    "typescript": "5.3.0"
  }
}
